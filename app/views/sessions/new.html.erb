<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

    <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :login %>
        <%= f.text_field :login %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Sign in" %>
    <% end %>

<% flash.each do |key, message| %>
    <p class="<%= key %>"><%= message %></p>
<% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
